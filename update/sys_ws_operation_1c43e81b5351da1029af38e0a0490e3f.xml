        <http_method>GET</http_method>
        <name>Get Ni record</name>
        <operation_script><![CDATA[(function process( /*RESTAPIRequest*/ request, /*RESTAPIResponse*/ response) {

    var niRec = {};

    var niNumber = request.pathParams.number;
    if (!niNumber) {
        response.setError(sn_ws_err.NotFoundError('Record number not provided'));
        response.setStatus(404);
        return;
    }

    var niGr = new GlideRecord("x_58872_needit_needit");
    niGr.addEncodedQuery('number=' + niNumber);
    niGr.query();

    if (niGr.next()) {

        niRec["Number"] = niGr.number;
        niRec["Requested for"] = niGr.u_requested_for;
        niRec["Short description"] = niGr.short_description;
        niRec["Assign to"] = niGr.assigned_to;
        niRec["Status"] = niGr.state;
        niRec["Priority"] = niGr.priority;

    } else {
        response.setError(sn_ws_err.NotFoundError('Record number not founded'));
        response.setStatus(404);
        return;
    }

    response.setBody(niRec);

})(request, response);]]></operation_script>
